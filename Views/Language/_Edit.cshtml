@model Tunrecrute.ViewModels.LanguageViewModel
    <div class="modal fade modal-experience" id="modal-lang-edit" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="title">
                        <h4><i data-feather="globe"></i>Language</h4>
                    </div>
                    <div class="content">
                        <form asp-action="Edit" asp-route-id="@Model.language.Id" method="post">
                            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid" />
                            <div class="input-block-wrap">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" style="margin-right: 0; padding-top: 10px; padding-bottom: 0; color: #6f7484;font-size: 1.4rem; font-family: 'Poppins', sans-serif; font-weight: 600">
                                        Language Information
                                    </label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">Title</div>
                                            </div>
                                            <input asp-for="language.LanguageName" class="form-control" />
                                            <span asp-validation-for="language.LanguageName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-sm-3 col-sm-9">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">Level</div>
                                            </div>
                                            <select class="form-control" asp-for="language.ProfeciencyLevel" asp-items="@Model.list">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="offset-sm-3 col-sm-9">
                                        <div class="buttons">
                                            <button class="primary-bg" id="EDIT-LANGUAGE" data-save="modal">Save Update</button>
                                            <button class="" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>